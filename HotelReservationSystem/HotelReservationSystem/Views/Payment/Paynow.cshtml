
@{
    ViewBag.Title = "Paynow";
}

<h2>Confirm your Booking</h2>
@if (ViewBag.ExistingCustomer == "true")
{
    using (Html.BeginForm("Paynow", "Payment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="jumbotron col-md-19">
            <div>
                <Label>Existing Customer:</Label>
                <div>
                    <label>Name On Card : </label>
                    <input type="text" name="nameOnCard" value="@ViewBag.NameOnCard" disabled>
                </div>
                <br />
                <div>
                    <label>Card Type : </label>
                    <input type="text" name="cardNumber" value="@ViewBag.cardType" disabled>
                </div>
                <br />

                <div>
                    <label>Card Number : </label>
                    <input type="text" name="cardNumber" value="@ViewBag.CardNumber" disabled>
                </div>
                <br />
                <div>
                    <label>Expiry Date : </label>
                    <input type="text" name="expDate" value="@ViewBag.ExpiryDate" disabled>
                </div>
                <br />
                <div>
                    <label>Card Added on : </label>
                    <input type="text" name="cardCreationDate" value="@ViewBag.CardCreationDate" disabled>

                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pay Now" class="btn btn-primary" style="width: 100%" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete Card" class="btn btn-primary" style="width: 100%" />
                </div>
            </div>
        </div>
    }
}
@if (ViewBag.ExistingCustomer == "false")
{
    using (Html.BeginForm("Paynow", "Payment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <Label class="media-heading">You do not have any cards associated with the account. Kindly Add a New Card to complete the Booking.</Label>
            <div class="form-group">
                <label value="Name on Card">Name on Card :</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label value="Card Number">Card Number :</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label value="Card Number">Card Type :</label>
                <input type="text" />
            </div>
            <div class="form-group">
                <label value="Expiry Date">Expiry Date :</label>
                <input type="text" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Card" class="btn btn-primary" style="width: 100%" />
            </div>
        </div>

    }
}
@if (ViewBag.PaymentInfo == "Success")
{
        <h2>@ViewBag.PaymentInfo</h2>
}

